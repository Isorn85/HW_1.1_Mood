operation = input('''Please type in the operation you would like to complete:
+ for addition
- for subtraction
* for multiplication
/ for division
''')

first_num = int(input("Enter first number: "))
second_num = int(input("Enter second number: "))

if operation == "+":
    print(first_num + second_num)
if operation == "-":
    print(first_num - second_num)
if operation == "*":
    print(first_num * second_num)
if operation == "/":
    print(first_num / second_num)
